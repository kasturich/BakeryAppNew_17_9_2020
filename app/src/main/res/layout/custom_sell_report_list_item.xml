<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainListLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/full_transparent_color"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <RelativeLayout
            android:id="@+id/mainRelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/leave_list_shadow"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/itemRelative1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:paddingTop="5dp">

                <RelativeLayout
                    android:id="@+id/errorRelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txtError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/dark_brown"
                        android:text="@string/scheme_error">

                    </TextView>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/countLinear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:gravity="center|start"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/txtOrderCount"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/leave_days_circle"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="1"
                        android:textColor="#fff"
                        android:textSize="12sp" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/toprelative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/countLinear">

                    <TextView
                        android:id="@+id/txtTotalOrderAmountTitle"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/sell_total_order_amount"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txtTotalAmountSeparator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_toEndOf="@+id/txtTotalOrderAmountTitle"
                        android:text="@string/txt_separator"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txtTotalOrderAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_toEndOf="@+id/txtTotalAmountSeparator"
                        android:text="@string/sell_total_order_amount"
                        android:textColor="@color/black" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bottomRelative"
                    android:layout_below="@+id/toprelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/countLinear">

                    <TextView
                        android:id="@+id/txtPaymentModeTitle"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/sell_payment_type"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txtPaymentModeSeparator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_toEndOf="@+id/txtPaymentModeTitle"
                        android:text="@string/txt_separator"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txtPaymentMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_toEndOf="@+id/txtPaymentModeSeparator"
                        android:text="@string/sell_payment_type"
                        android:textColor="@color/black" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>