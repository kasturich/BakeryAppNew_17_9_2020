<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
                android:id="@+id/itemRelative1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:paddingTop="3dp"
                android:background="@drawable/leave_list_shadow"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:id="@+id/errorRelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txtError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/dark_brown"
                        android:text="@string/error_msg_report">

                    </TextView>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/countLinear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="0.33"
                    android:padding="3dp">

                    <TextView
                        android:id="@+id/txtOrderCount"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/leave_days_circle"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="1"
                        android:textColor="#fff"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/toprelative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp">

                        <TextView
                            android:id="@+id/txtTotalOrderAmountTitle"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:text="@string/sell_total_order_amount"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txtTotalAmountSeparator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:layout_toEndOf="@+id/txtTotalOrderAmountTitle"
                            android:text="@string/txt_separator"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txtTotalOrderAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:layout_toEndOf="@+id/txtTotalAmountSeparator"
                            android:text="@string/sell_total_order_amount"
                            android:textColor="@color/black" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/bottomRelative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:id="@+id/txtPaymentModeTitle"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:text="@string/sell_payment_type"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txtPaymentModeSeparator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:layout_toEndOf="@+id/txtPaymentModeTitle"
                            android:text="@string/txt_separator"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txtPaymentMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:layout_toEndOf="@+id/txtPaymentModeSeparator"
                            android:text="@string/sell_payment_type"
                            android:textColor="@color/black" />

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/viewRelative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:gravity="end|center"
                    android:layout_marginEnd="7dp"
                    android:layout_gravity="center|end">

                    <!--<TextView
                        android:id="@+id/txtBillViewDetails"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:padding="5dp"
                        android:background="@color/dark_brown"
                        android:textColor="@color/white"
                        android:text="@string/view_bill_details">

                    </TextView>-->

                    <ImageView
                        android:id="@+id/imgView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_forward_arrow">

                    </ImageView>

                </RelativeLayout>

            </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>